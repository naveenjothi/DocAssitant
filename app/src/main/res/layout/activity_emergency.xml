<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Emergency">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:alpha="0.2"
                android:src="@drawable/ic_docsym"
                android:layout_marginRight="40sp"
                android:layout_marginLeft="40sp"
                android:layout_height="wrap_content">
            </ImageView>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/emergency_border"
            android:text="Emergency"
            android:textAlignment="center"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal">
        </TextView>
        <RelativeLayout
           android:layout_width="150dp"
           android:layout_centerInParent="true"
           android:id="@+id/center_emergency_layout"
           android:elevation="30dp"
           android:background="@drawable/circle_layout"
           android:layout_height="150dp">
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="100dp"
               android:src="@drawable/ic_emergency"
               android:layout_centerInParent="true"
               android:layout_height="100dp"/>
       </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/center_emergency_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Our Drivers are on the way \n to take care of you.\n You will be \n Just Fine.. "
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">
            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>